{
  "name": "snapit",
  "version": "0.0.1",
  "scripts": {
    "dev": "pnpm --parallel dev & pnpm dev:watch-sdk",
    "dev:web": "pnpm --filter web dev",
    "dev:api": "pnpm --filter api dev",
    "dev:watch-sdk": "chokidar \"apps/api/openapi.json\" -c \"pnpm generate:sdk\"",
    "build": "pnpm --recursive build",
    "build:web": "pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "start:web": "pnpm --filter web start",
    "start:api": "pnpm --filter api prod",
    "lint:check": "ultracite check",
    "lint:fix": "ultracite fix",
    "generate:sdk": "pnpm --filter @snapit/sdk generate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^25.0.1",
    "chokidar-cli": "^3.0.0",
    "lefthook": "^2.0.11",
    "ultracite": "6.4.0"
  }
}
